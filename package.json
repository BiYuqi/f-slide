{
  "name": "mdppt",
  "private": true,
  "root": true,
  "scripts": {
    "install:dev": "lerna bootstrap",
    "fix": "eslint --fix 'packages/**/*.js'",
    "prettier": "prettier --write 'packages/**/*.js'"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2,
    "semi": false
  },
  "husky": {
    "hooks": {
      "precommit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "lerna": "^3.15.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1"
  }
}
