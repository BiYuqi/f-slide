{
  "name": "mdppt",
  "private": true,
  "root": true,
  "scripts": {
    "install:dev": "lerna bootstrap",
    "fix": "eslint --fix 'packages/**/*.js'",
    "prettier": "prettier --write 'packages/**/*.js'"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js}": [
      "npm run prettier",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "lerna": "^3.15.0",
    "eslint": "^6.7.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^3.0.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1"
  }
}
